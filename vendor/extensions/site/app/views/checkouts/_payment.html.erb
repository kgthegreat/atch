<fieldset id="payment">
  <legend><%= t("payment_information") %></legend>
 <%= "At present we only accept cash on delivery" %>


  <%# @payment_methods.each do |method| %>
  <p>
    <label>
      <%= radio_button_tag "checkout[payments_attributes][][payment_method_id]", @payment_methods[1].id, @payment_methods[1] == @payment_methods[1] %>
      <%= t(@payment_methods[1].name, :scope => :payment_methods, :default => "Cash On Delivery") %>
    </label>
  </p>
  <%# end %>

  <ul id="payment-methods">
    <% @payment_methods.each do |method| %>
      <li id="payment_method_<%= method.id %>"<%= ' class="last"' if method == @payment_methods.last %>>
        <fieldset>
          <%= render "checkouts/payment/#{method.method_type}", :payment_method => method %>
        </fieldset>
      </li>
    <% end %>
  </ul>

</fieldset>

<hr class="space" />

<div class="form-buttons">
  <input type="submit" class="continue button primary" value="<%=t("save_and_continue") %>" onclick="$('#checkout_form_address').validate();" />
</div>
