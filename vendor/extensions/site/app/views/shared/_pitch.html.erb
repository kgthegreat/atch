<body>


  <div id="mygallery" class="stepcarousel">
    <div class="belt">

      <div class="panel">
        <%= render :partial => "shared/headline" %>
      </div>


      <div class="panel">
        <div class="paneloffer">
        <%= render :partial => "shared/products", :locals => {:products =>
(Product.active.find(:all,
 :conditions => 'products.meta_keywords LIKE "%offers firstslide%"', :limit => 3))} %>
        </div>
      </div>

      <div class="panel">
        <div class="paneloffer">
        <%= render :partial => "shared/products", :locals => {:products =>
(Product.active.find(:all,
 :conditions => 'products.meta_keywords LIKE "%offers secondslide%"', :limit => 3))} %>
        </div>
      </div>

      <div class="panel">
        <div class="paneloffer">
        <%= render :partial => "shared/products", :locals => {:products =>
(Product.active.find(:all,
 :conditions => 'products.meta_keywords LIKE "%offers thirdslide%"', :limit => 3))} %>
        </div>
      </div>



    </div>



  </div>

  <div id="mygallery-paginate" style="width: 925px; text-align:right; align: right;">
    <img src="images/header_pitch/selectcircle.png" data-over="images/header_pitch/graycircle.png" data-select="images/header_pitch/closedcircle.png" data-moveby="1" />
  </div>


</body>
